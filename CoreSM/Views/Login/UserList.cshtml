@model IEnumerable<CoreSM.Models.Users>

@using System;
@{
    ViewData["Title"] = "AdvanceTaxPaid";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Add Users</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="invoice" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>User ID</th>
                                        <th>User Name</th>
                                        <th>Password</th>
                                        <th>Is Active</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.UserID</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Password</td>
                                            <td>@item.IsActive</td>
                                            <td>
                                                <a target="_blank" href="/AddUser/@item.UserID"><img style="width: 24px;" src="~/images/icons8-edit-50.png" /></a>
                                                <a id="delte" onclick="deletes(@item.UserID)"><img style="width: 24px;" src="~/images/icon/icons8-trash-can-50.png" /></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function deletes(id) {
        if (confirm('Are you sure want to delete ?')) {
            window.location.href = '../RemoveUser/' + id;
        }
    }

    $(document).ready(function () {
        $('#invoice').DataTable();
        $('#invoice_filter').append('<a style="margin-left: 15px;" href="/AddUser" class="btn btn-danger">Add User</a>');
    });
</script>
