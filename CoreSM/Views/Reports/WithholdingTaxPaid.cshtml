@model IEnumerable<CoreSM.Models.Payment>
@using System;
@{
    ViewData["Title"] = "WithholdingTaxPaid";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Withholding Tax Paid</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="payment" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Payment Date</th>
                                        <th>Registration #</th>
                                        <th>Category</th>
                                        <th>Tax Rate</th>
                                        <th>Tax Amount</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.PaymentDate.ToShortDateString()
                                            </td>
                                            <td>@item.CNIC</td>
                                            <td>@item.SaleType</td>
                                            <td>@item.TaxRate</td>
                                            <td>@item.TaxAmount</td>
                                            @if (item.isCreated)
                                            {
                                                <td><button onclick="create(@item.ID)" class="btn btn-danger btn-sm">Create Challan</button></td>
                                            }
                                            else
                                            {
                                                <td><span style="background-color: green;padding: 6px;border-radius: 3px;color: white;">Processing</span></td>
                                            }
                                            <td>
                                                <a target="_blank" href="/Payment/@item.ID"><img style="width: 24px;" src="~/images/icons8-edit-50.png" /></a>
                                                <a href="/RemovePayment/@item.ID"><img style="width: 24px;" src="~/images/icon/icons8-trash-can-50.png" /></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#payment').DataTable();
    });

    function create(ID) {
        if (confirm('Do you want to create this payment challan?')) {
            $.ajax({
                type: "GET",
                url: '/Reports/CreateChalan/' + ID,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function () {
                    // alert("Data has been added successfully.");
                    location.reload();
                },
                error: function () {
                    alert("Error while creating challan data");
                }
            });
        }
    }

    function convertdate(date) {
        var fullDate = new Date(date);
        var twoDigitMonth = fullDate.getMonth() + "";
        if (twoDigitMonth.length == 1)
            twoDigitMonth = "0" + twoDigitMonth;
        var twoDigitDate = fullDate.getDate() + "";
        if (twoDigitDate.length == 1)
            twoDigitDate = "0" + twoDigitDate;
        var currentDate = twoDigitDate + "/" + twoDigitMonth + "/" + fullDate.getFullYear();
        console.log(currentDate);
        return currentDate;
    }
</script>
