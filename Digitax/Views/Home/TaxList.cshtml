@model IEnumerable<CoreSM.Models.SalesCategory>

@using System;
@{
    ViewData["Title"] = "AdvanceTaxPaid";
}
<style>
    .activemenutax {
        background-color: lightgray;
        padding-left: 10px !important;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Add Tax Rate</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="invoice" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Payer Type</th>
                                        <th>Type</th>
                                        <th>Category</th>
                                        <th>Tax Rate</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.PayerType</td>
                                            <td>@item.Type</td>
                                            <td>@item.Category</td>
                                            <td>@item.TaxRate</td>
                                            <td>
                                                <a target="_blank" href="/Addtax/@item.ID"><img style="width: 24px;" src="~/images/icons8-edit-50.png" /></a>
                                                <a id="delte" onclick="deletes(@item.ID)"><img style="width: 24px;" src="~/images/icon/icons8-trash-can-50.png" /></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function deletes(id) {
        if (confirm('Are you sure want to delete ?')) {
            window.location.href = '../Removetax/' + id;
        }        
    }

    $(document).ready(function () {
        $('#invoice').DataTable();
        $('#invoice_filter').append('<a style="margin-left: 15px;" href="/AddTax" class="btn btn-danger">Add Tax</a>');
    });
</script>
