@model CoreSM.Models.Users

<style>
    @@media all and (min-width:321px) and (max-width: 480px) {
        label {
            font-size: 13px;
        }
    }

    .activemenuuser {
        background-color: lightgray;
        padding-left: 10px !important;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Add User</div>
                <div class="card-body">
                    <form method="post" action="/AddUser">
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <input type="hidden" asp-for="UserID" />
                                    <label asp-for="UserName" class="control-label mb-1">User Name</label>
                                    <input asp-for="UserName" type="text" class="form-control cc-exp" data-val="true" data-val-required="Please enter the card expiration"
                                           data-val-cc-exp="Please enter a valid month and year" placeholder=""
                                           autocomplete="cc-exp">
                                    <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label mb-1">Password</label>
                                    <input asp-for="Password" type="text" class="form-control cc-exp" data-val="true" data-val-required="Please enter the card expiration"
                                           data-val-cc-exp="Please enter a valid month and year" placeholder=""
                                           autocomplete="cc-exp">
                                    <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="IsInvoice" class="control-label mb-1">Is Invoice</label>
                                    <br />
                                    <label for="inline-checkbox1" class="form-check-label ">
                                        .
                                        <input asp-for="IsInvoice" style="margin-left: 25px;" type="checkbox" class="form-check-input">
                                    </label>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="IsPayment" class="control-label mb-1">Is Payment</label>
                                    <br />
                                    <label for="inline-checkbox1" class="form-check-label ">
                                        .
                                        <input asp-for="IsPayment" style="margin-left: 25px;" type="checkbox" class="form-check-input">
                                    </label>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="IsActive" class="control-label mb-1">Is Active</label>
                                    <br />
                                    <label for="inline-checkbox1" class="form-check-label ">
                                        .
                                        <input asp-for="IsActive" style="margin-left: 25px;" type="checkbox" class="form-check-input">
                                    </label>
                                </div>
                            </div>
                            <div class="col-4">
                                <input id="payment-button" type="submit" class="btn btn-lg btn-info btn-block" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" value="@ViewData["saved"]" id="hdnSaved" />
<script type="text/javascript">
    $(document).ready(function () {
        $('form').submit(function (e) {
            if ($('#Password').val() == '') {
                $('#Password').attr('style', 'border-color:red');
                e.preventDefault();
            } else {
                $('#Password').attr('style', '');
            }
            if ($('#UserName').val() == '') {
                $('#UserName').attr('style', 'border-color:red');
                e.preventDefault();
            } else {
                $('#UserName').attr('style', '');
            }
        })

        if ($('#hdnSaved').val() == 'saved') {
            alert("Invoice Has been Saved Successfully!");
            $('#hdnSaved').val('');
        }
    });
</script>